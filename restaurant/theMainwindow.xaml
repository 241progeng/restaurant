<Window  x:Class="restaurant.theMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:restaurant"
        mc:Ignorable="d"
        Title ="" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
   
    <Grid>
        <Menu Height="25" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="Wheat" >
            <MenuItem Header="For Client" Height="25" Click="Add_Click" ></MenuItem>
            <MenuItem Header="For Administration" Click="Add_Click2" ></MenuItem>
            <MenuItem Header="About us" Click="Add_Click3" ></MenuItem>
        </Menu>
        <Image Source="Resources/laba.png" Stretch="Uniform"  Margin="54,49,38,20" />

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="DarkMagenta" Offset="0"></GradientStop>
                <GradientStop Color="MediumPurple" Offset="0.3"></GradientStop>
                <GradientStop Color="pink" Offset="0.6"></GradientStop>
                <GradientStop Color="Wheat" Offset="0.9"></GradientStop>
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</Window>